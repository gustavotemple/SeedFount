<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".management.ManagementActivity"
    tools:showIn="@layout/activity_management">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/roomTitle0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_span="3"
            android:text="@string/seed_baby"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

    </TableRow>

    <TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_span="3"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/roomTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_span="2"
            android:text="@string/birth"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roomTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_span="1"
            android:text="@string/room"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/roomFromLayout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/roomFromText0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="@string/from"
                android:inputType="date"
                android:maxLines="1"
                android:singleLine="true"
                app:mask="##/####" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/roomToLayout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/roomToText0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="@string/to"
                android:inputType="date"
                android:maxLines="1"
                android:singleLine="true"
                app:mask="##/####" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/roomNumberLayout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/roomNumberText0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                app:mask="N#" />

        </android.support.design.widget.TextInputLayout>

    </TableRow>

